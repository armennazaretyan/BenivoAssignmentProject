@model IEnumerable<BenivoAssignment.Models.GroupViewModel>
    @{
        ViewBag.Title = "Groups";
    }
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">
                <a href="@Url.Action("Create")" class="btn btn-sm btn-success">Create new Group</a>
            </h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="panel panel-default">
        <div class="panel-heading">
            Hover Rows
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>MembersCount</th>
                            <th>StoryesCount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MembersCount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StoryesCount)
                            </td>
                            <td style="min-width: 190px;">
                                @if (item.IsJoined)
                                {
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-danger">Edit</a>
                                    <a href="@Url.Action("Leave", new { id = item.Id })" class="btn btn-sm btn-warning">Leave</a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">Details</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Join", new { id = item.Id })" class="btn btn-sm btn-success">Join</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
