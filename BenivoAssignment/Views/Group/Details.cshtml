@model BenivoAssignment.Models.GroupDetailsViewModel

@{
    ViewBag.Title = "Group details";
}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            Details of the Group <b>@Model.Name</b>
        </h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-6 col-md-6 col-md-offset-3">
        <fieldset>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Title
                </div>
                <div class="panel-body">
                    @Model.Name
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Description
                </div>
                <div class="panel-body">
                    @Model.Description
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Members
                </div>
                <div class="panel-body">
                    @String.Join(", ", @Model.Members.Select(m => m.Name))
                </div>
            </div>
            <p>
                <div class="row">
                    <div class="col-xs-1, col-lg-12">
                        <a href="@Url.Action("Index")" class="btn btn-lg btn-default">Back</a>
                        <a href="@Url.Action("Edit", new  { id = Model.Id })" class="btn btn-lg btn-success pull-right">Edit</a>
                    </div>
                </div>
            </p>
        </fieldset>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            Stories of the Group <b>@Model.Name</b>
        </h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    @{
        Html.RenderPartial("_StoryList", Model.Stories);
    }
</div>